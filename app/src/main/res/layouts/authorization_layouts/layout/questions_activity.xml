<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/authorization_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_200"
    android:fillViewport="true"
    tools:context=".activity.authorization.QuestionsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:focusableInTouchMode="true" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Часто задаваемые вопросы"
            android:textColor="@color/white"
            android:textSize="26dp"
            android:gravity="center"
            />
        <LinearLayout
            android:id="@+id/questions_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_200"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/documents_needed_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue_200"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >
                <Button
                    android:id="@+id/btn_documents_needed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Какие документы нужны для подачи?"
                    android:background="@drawable/round_btn"
                    android:textColor="@color/white"
                    />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/how_to_apply_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue_200"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_how_to_apply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. Как подать заявление?"
                    android:background="@drawable/round_btn"
                    android:textColor="@color/white"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/passing_score_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue_200"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >
                <Button
                    android:id="@+id/btn_passing_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. Какой проходной балл?"
                    android:background="@drawable/round_btn"
                    android:textColor="@color/white"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/medical_card_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue_200"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >
                <Button
                    android:id="@+id/btn_medical_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4. Нужна ли медицинская справка при подаче?"
                    android:background="@drawable/round_btn"
                    android:textColor="@color/white"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/сopy_of_documents_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue_200"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >
                <Button
                    android:id="@+id/btn_сopy_of_documents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5. Нужно ли заверять копии для подачи документов?"
                    android:background="@drawable/round_btn"
                    android:textColor="@color/white"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/digital_signature_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue_200"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >
                <Button
                    android:id="@+id/btn_digital_signature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6. Нужна ли электронная цифровая подпись при подаче документов?"
                    android:background="@drawable/round_btn"
                    android:textColor="@color/white"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/needed_exams_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue_200"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >
                <Button
                    android:id="@+id/btn_needed_exams"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7. Какие вступительные испытания? Нужно ли проходить вступительные, если сдавал ЕГЭ?"
                    android:background="@drawable/round_btn"
                    android:textColor="@color/white"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dormitory_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue_200"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >
                <Button
                    android:id="@+id/btn_dormitory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="8. Предоставляется ли иногородним студентам общежитие?"
                    android:background="@drawable/round_btn"
                    android:textColor="@color/white"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/need_to_be_enrolled_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue_200"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >
                <Button
                    android:id="@+id/btn_need_to_be_enrolled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9. Что требуется, чтобы быть зачисленным?"
                    android:background="@drawable/round_btn"
                    android:textColor="@color/white"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp" >
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>