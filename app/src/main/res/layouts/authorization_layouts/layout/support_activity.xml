<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/cradient_for_statement"
    tools:context=".activity.support.SupportActivity">

    <LinearLayout
        android:id="@+id/main_support_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="9dp"
        android:paddingLeft="9dp"
        android:clickable="true"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:focusable="true">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp"
            >
            <LinearLayout
                android:id="@+id/support_with_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/orange_700"
                android:animateLayoutChanges="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:clickable="true"
                android:orientation="vertical"
                android:focusable="true">
                <TextView
                    android:id="@+id/textview_support_with_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Помощь с паролем"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp"
            >
            <LinearLayout
                android:id="@+id/support_with_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/orange_700"
                android:animateLayoutChanges="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical" >
                <TextView
                    android:id="@+id/textview_support_with_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Помощь с логином"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>

</ScrollView>