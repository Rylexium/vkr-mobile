<?xml version="1.0" encoding="utf-8"?>
<com.example.vkr.utils.NonFocusingScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cradient_for_statement"
    tools:context=".activity.support.ChangePasswordActivity">
    <LinearLayout
        android:id="@+id/change_password_main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Введите код подтверждения"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/code_number1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:paddingRight="9dp"
                android:textSize="20sp"
                android:gravity="center"
                android:maxLength="1"
                android:inputType="phone"
                android:digits="0123456789"
                />
            <TextView
                android:layout_width="9dp"
                android:layout_height="match_parent"
                />
            <EditText
                android:id="@+id/code_number2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_weight="1"
                android:paddingRight="9dp"
                android:textSize="20sp"
                android:gravity="center"
                android:maxLength="1"
                android:inputType="phone"
                android:digits="0123456789"
                />
            <TextView
                android:layout_width="9dp"
                android:layout_height="match_parent"
                />
            <EditText
                android:id="@+id/code_number3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_weight="1"
                android:paddingRight="9dp"
                android:textSize="20sp"
                android:gravity="center"
                android:maxLength="1"
                android:inputType="phone"
                android:digits="0123456789"
                />
            <TextView
                android:layout_width="9dp"
                android:layout_height="match_parent"
                />
            <EditText
                android:id="@+id/code_number4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_weight="1"
                android:textSize="20sp"
                android:gravity="center"
                android:maxLength="1"
                android:inputType="phone"
                android:digits="0123456789"
                />


        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp"
            >
            <LinearLayout
                android:id="@+id/new_password_layout"
                android:background="@color/orange_700"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:animateLayoutChanges="true"
                >

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            />
    </LinearLayout>

</com.example.vkr.utils.NonFocusingScrollView>