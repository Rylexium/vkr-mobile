<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/authorization_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".activity.authorization.AuthorizationActivity">

    <LinearLayout
        android:id="@+id/authorization_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:focusableInTouchMode="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_200"
            android:orientation="vertical">
        <ImageView
            android:id="@+id/ssau_logo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ssau_preview" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/ic_wave" />
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:paddingBottom="32dp"
                >
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined.Blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:hint="Логин"
                android:textColorHint="@color/grey"
                app:startIconDrawable="@drawable/ic_baseline_person_24"
                app:startIconTint="@color/blue_500"
                app:endIconMode="clear_text"
                app:boxStrokeColor="@color/blue_700"
                app:hintTextColor="@color/blue_700"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textbox_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="@string/alfavit_for_login"
                    android:drawablePadding="8dp"
                    android:ems="10"
                    android:inputType="text"
                    android:maxLength="64"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/blue_700"
                    android:textColorHint="@color/black"
                    android:textCursorDrawable="@drawable/cursor_black"
                    android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined.Blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:hint="Пароль"
                app:passwordToggleEnabled="true"
                android:textColorHint="@color/grey"
                app:startIconDrawable="@drawable/ic_baseline_lock_24"
                app:startIconTint="@color/blue_500"
                app:boxStrokeColor="@color/blue_700"
                app:hintTextColor="@color/blue_700"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:textCursorDrawable="@drawable/cursor_black"
                    android:textColorHighlight="@color/blue_700"
                    android:id="@+id/textbox_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="@string/alfavit_for_password"
                    android:ems="10"
                    android:textSize="18sp"
                    android:inputType="textPassword"
                    android:maxLength="64"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:drawablePadding="8dp"
                    android:textColorHint="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/button_singIn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/round_btn"
                android:text="Войти"
                android:textColor="@color/white"
                android:textSize="22sp" />
                
            <TextView
                android:id="@+id/registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="25dp"
                android:clickable="true"
                android:gravity="center"
                android:text="Подать заявление"
                android:textColor="@color/grey"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/remember_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="25dp"
                android:clickable="true"
                android:gravity="center"
                android:text="Восстановить доступ"
                android:textColor="@color/grey"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/questions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:clickable="true"
                android:gravity="center"
                android:text="Часто задаваемые вопросы"
                android:textColor="@color/grey"
                android:textSize="23sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="110dp" />

    </LinearLayout>
</ScrollView>