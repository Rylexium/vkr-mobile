<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099fa"
    android:orientation="vertical"
    tools:context=".splash_screen.SplashScreen">

    <LinearLayout
        android:id="@+id/splash_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <ImageView
            android:id="@+id/splash_logo"
            android:layout_width="match_parent"
            android:layout_height="420dp"
            app:srcCompat="@drawable/splash_screen1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Поступай в Самарский университет им. Королёва"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="30dp" />
        <TextView
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="выполнено студентом 4 курса МОАИС Азизовым Алексеем"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="18dp" />
    </LinearLayout>
</LinearLayout>