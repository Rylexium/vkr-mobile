<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="datePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">?attr/colorPrimaryDark</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:colorControlActivated">?attr/colorSecondary</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:selectableItemBackgroundBorderless">@drawable/round_btn</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.App.TextInputLayoutWhite" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SwitchTheme" parent="">
        <item name="colorControlActivated">?attr/colorPrimaryDark</item>
        <item name="colorButtonNormal">?attr/colorPrimaryDark</item>
        <item name="android:colorControlActivated">?attr/colorPrimaryDark</item>
        <item name="android:colorAccent">?attr/colorPrimaryDark</item>
    </style>
    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined.Blue" parent="">
        <item name="colorPrimary">?attr/colorPrimaryDark</item>
    </style>
    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined.Black" parent="">
        <item name="colorPrimary">@color/white</item>
    </style>
</resources>