<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/authorization_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_200"
    android:fillViewport="true"
    tools:context=".activity.registration.ExamsResultActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:focusableInTouchMode="true" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Введите ваши результы ЕГЭ"
            android:textColor="@color/white"
            android:textSize="26dp"
            android:gravity="center"
            />
        <LinearLayout
            android:id="@+id/exams_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:focusableInTouchMode="true" >

            <Button
                android:id="@+id/add_field_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                android:onClick="onAddField"
                android:textColor="@color/white"
                android:background="@color/blue_500"
                android:text="Добавить экзамен"
                />
        </LinearLayout>
        <Button
            android:id="@+id/button_next_to_lk"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@color/blue_500"
            android:text="Продолжить"
            />
    </LinearLayout>

</ScrollView>