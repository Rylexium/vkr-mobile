<?xml version="1.0" encoding="utf-8"?>
<com.example.vkr.utils.NonFocusingScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/passport1_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".activity.registration.ui.passport1.Passport1Fragment">

    <LinearLayout
        android:id="@+id/passport1_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <TextView
            android:id="@+id/textViewRegistration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Введите свои данные"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="35sp"
            android:paddingTop="20dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="9dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined.Blue"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="9dp"
                    android:hint="Фамилия"
                    android:textColorHint="@color/grey"
                    app:boxStrokeColor="@color/blue_700"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:textCursorDrawable="@drawable/cursor_black"
                        android:textColorHighlight="@color/blue_700"
                        android:id="@+id/textbox_family_reg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:digits="@string/alfavit_for_name"
                        android:inputType="textPersonName"
                        android:maxLength="32"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        tools:ignore="TouchTargetSizeCheck" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined.Blue"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="9dp"
                    android:hint="Имя"
                    android:textColorHint="@color/grey"
                    app:boxStrokeColor="@color/blue_700"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:textCursorDrawable="@drawable/cursor_black"
                        android:textColorHighlight="@color/blue_700"
                        android:id="@+id/textbox_name_reg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="@string/alfavit_for_name"
                        android:inputType="textPersonName"
                        android:maxLength="32"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        tools:ignore="TouchTargetSizeCheck" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined.Blue"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="9dp"
                    android:hint="Отчество (при наличиии)"
                    android:textColorHint="@color/grey"
                    app:boxStrokeColor="@color/blue_700"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:textCursorDrawable="@drawable/cursor_black"
                        android:textColorHighlight="@color/blue_700"
                        android:id="@+id/textbox_patronymic_reg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="@string/alfavit_for_name"
                        android:inputType="textPersonName"
                        android:maxLength="64"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        tools:ignore="TouchTargetSizeCheck" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="9dp"
            android:paddingLeft="9dp"
            android:paddingBottom="9dp"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined.Blue"
                android:layout_width="190dp"
                android:layout_height="52dp"
                android:hint="Дата рождения"
                android:textColorHint="@color/grey"
                app:boxStrokeColor="@color/blue_700"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:textCursorDrawable="@drawable/cursor_black"
                    android:textColorHighlight="@color/blue_700"
                    android:id="@+id/textbox_date_of_birth"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:digits="@string/only_numbers"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:focusable="false"
                    android:textColor="@color/white"
                    android:drawableStart="@drawable/calendar_icon"
                    app:startIconTintMode="src_atop"
                    android:drawablePadding="8dp"
                    android:textSize="17sp"
                    tools:ignore="TouchTargetSizeCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <Switch
                android:id="@+id/radiobutton_sex"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:text="Пол"
                android:theme="@style/SwitchTheme"
                android:textColor="@color/grey"
                android:textSize="17sp" />

        </LinearLayout>


        <Spinner
            android:id="@+id/listbox_nationality"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:layout_marginRight="9dp"
            android:layout_marginLeft="9dp"
            android:background="@color/white"
            />

    </LinearLayout>
</com.example.vkr.utils.NonFocusingScrollView>