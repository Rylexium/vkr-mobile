<?xml version="1.0" encoding="utf-8"?>
<com.example.vkr.utils.custom_views.NonFocusingScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/education_document_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".activity.registration.ui.privileges.PrivilegesFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="9dp"
        android:focusableInTouchMode="true" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Загрузите ваши льготы"
            android:textColor="@color/white"
            android:textSize="26dp"
            android:gravity="center"
            />

        <Spinner
            android:id="@+id/listbox_privileges"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:background="@color/white"
            />


        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/layout_for_images_privileges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            >

        </LinearLayout>


        <Button
            android:id="@+id/button_add_privileges"
            android:layout_marginTop="9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Добавить фотографию"
            android:textColor="@color/white"
            android:background="@drawable/round_btn"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"/>


    </LinearLayout>
</com.example.vkr.utils.custom_views.NonFocusingScrollView>