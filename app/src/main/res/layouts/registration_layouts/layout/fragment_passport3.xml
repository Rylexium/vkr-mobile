<?xml version="1.0" encoding="utf-8"?>
<com.example.vkr.utils.custom_views.NonFocusingScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/passport3_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.registration.ui.passport3.Passport3Fragment">

    <LinearLayout
        android:id="@+id/passport3_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <Button
            android:id="@+id/make_passport3_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="9dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="9dp"
            android:background="@drawable/round_btn"
            android:text="Введите место жительства(прописка) и\n загрузите стр.5 паспорта"
            android:textColor="@color/white"
            android:textColorHint="@color/grey"
            android:textSize="15sp" />

        <com.zolad.zoominimageview.ZoomInImageView
            android:id="@+id/imageViewPassport3"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            android:layout_marginStart="9dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="9dp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Адрес постоянной регистрации"
            android:textColor="@color/black_grey"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="9dp"
            />
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined.Blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="9dp"
            android:hint="Почтовый индекс"
            android:textColorHint="@color/grey"
            app:boxStrokeColor="?attr/colorPrimaryDark"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:textCursorDrawable="@drawable/cursor_black"
                android:textColorHighlight="?attr/colorPrimaryDark"
                android:id="@+id/textbox_post_index_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="@string/only_numbers"
                android:inputType="phone"
                android:maxLength="6"
                android:textColor="@color/black_grey"
                android:textSize="17sp"
                tools:ignore="TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined.Blue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="9dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="9dp"
            android:hint="Выберите субъект РФ"
            android:textColorHint="@color/grey"
            app:boxStrokeColor="?attr/colorPrimaryDark"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
            >

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:textCursorDrawable="@drawable/cursor_black"
                android:textColorHighlight="?attr/colorPrimaryDark"
                android:id="@+id/textbox_subject_reg"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:digits="@string/alfavit_russian"
                android:inputType="textAutoComplete"
                android:maxLength="54"
                android:paddingStart="15sp"
                android:textSize="17sp"
                android:textColor="@color/black_grey"
                tools:ignore="TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined.Blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="9dp"
            android:hint="Населённый пункт"
            android:textColorHint="@color/grey"
            android:textColor="@color/black_grey"
            app:boxStrokeColor="?attr/colorPrimaryDark"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:textCursorDrawable="@drawable/cursor_black"
                android:textColorHighlight="?attr/colorPrimaryDark"
                android:id="@+id/textbox_city_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="@string/alfavit_russian"
                android:inputType="none"
                android:maxLength="54"
                android:textColor="@color/black_grey"
                android:textSize="17sp"
                tools:ignore="TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined.Blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="9dp"
            android:hint="Улица"
            android:textColorHint="@color/grey"
            android:textColor="@color/black_grey"
            app:boxStrokeColor="?attr/colorPrimaryDark"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:textCursorDrawable="@drawable/cursor_black"
                android:textColorHighlight="?attr/colorPrimaryDark"
                android:id="@+id/textbox_residence_street_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="@string/alfavit_russian"
                android:inputType="none"
                android:maxLength="128"
                android:textSize="17sp"
                android:textColor="@color/black_grey"
                tools:ignore="TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Адрес фактического проживания"
            android:textColor="@color/black_grey"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="9dp"
            />
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined.Blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="9dp"
            android:hint="Почтовый индекс"
            android:textColorHint="@color/grey"
            app:boxStrokeColor="?attr/colorPrimaryDark"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:textCursorDrawable="@drawable/cursor_black"
                android:textColorHighlight="?attr/colorPrimaryDark"
                android:id="@+id/textbox_post_index_actual"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="@string/only_numbers"
                android:inputType="phone"
                android:maxLength="6"
                android:textColor="@color/black_grey"
                android:textSize="17sp"
                tools:ignore="TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined.Blue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="9dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="9dp"
            android:hint="Выберите субъект РФ"
            android:textColorHint="@color/grey"
            app:boxStrokeColor="?attr/colorPrimaryDark"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
            >

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:textCursorDrawable="@drawable/cursor_black"
                android:textColorHighlight="?attr/colorPrimaryDark"
                android:id="@+id/textbox_subject_actual"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:digits="@string/alfavit_russian"
                android:inputType="none"
                android:maxLength="54"
                android:paddingStart="15sp"
                android:textSize="17sp"
                android:textColor="@color/black_grey"
                tools:ignore="TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined.Blue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="9dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="9dp"
            android:hint="Населённый пункт"
            android:textColorHint="@color/grey"
            android:textColor="@color/black_grey"
            app:boxStrokeColor="?attr/colorPrimaryDark"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textbox_city_actual"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:digits="@string/alfavit_russian"
                android:focusableInTouchMode="true"
                android:inputType="none"
                android:maxLength="54"
                android:textColor="@color/black_grey"
                android:textColorHighlight="?attr/colorPrimaryDark"
                android:textCursorDrawable="@drawable/cursor_black"
                android:textSize="17sp"
                tools:ignore="TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined.Blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="9dp"
            android:hint="Улица"
            android:textColorHint="@color/grey"
            android:textColor="@color/black_grey"
            app:boxStrokeColor="?attr/colorPrimaryDark"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:textCursorDrawable="@drawable/cursor_black"
                android:textColorHighlight="?attr/colorPrimaryDark"
                android:id="@+id/textbox_residence_street_actual"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="@string/alfavit_russian"
                android:inputType="textAutoComplete"
                android:maxLength="128"
                android:textColor="@color/black_grey"
                android:textSize="17sp"
                tools:ignore="TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>
    
        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"/>

    </LinearLayout>
</com.example.vkr.utils.custom_views.NonFocusingScrollView>