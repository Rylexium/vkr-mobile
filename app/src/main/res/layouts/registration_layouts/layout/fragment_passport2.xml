<?xml version="1.0" encoding="utf-8"?>
<com.example.vkr.utils.NonFocusingScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/passport2_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".activity.registration.ui.passport2.Passport2Fragment">

    <LinearLayout
        android:id="@+id/passport2_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <Button
            android:id="@+id/make_passport2_photo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="9dp"
            android:background="@drawable/round_btn"
            android:text="Введите данные и загрузите стр.2 паспорта"
            android:textColor="@color/white"
            android:textColorHint="@color/grey"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="9dp"
                android:paddingTop="9dp"
                android:paddingRight="9dp"
                android:paddingBottom="9dp">

                <android.support.design.widget.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:hint="Серия паспорта"
                    android:paddingRight="9dp"
                    android:textColorHint="@color/grey"
                    app:boxStrokeColor="@color/blue_700"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                    <AutoCompleteTextView
                        android:id="@+id/textbox_passport_series"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="@string/only_numbers"
                        android:inputType="phone"
                        android:maxLength="5"
                        android:textColor="@color/white"
                        android:textColorHighlight="@color/blue_700"
                        android:textCursorDrawable="@drawable/cursor_black"
                        tools:ignore="TouchTargetSizeCheck" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:hint="Номер паспорта"
                    android:textColorHint="@color/grey"
                    app:boxStrokeColor="@color/blue_700"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                    <AutoCompleteTextView
                        android:id="@+id/textbox_passport_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="@string/only_numbers"
                        android:inputType="phone"
                        android:maxLength="6"
                        android:textColor="@color/white"
                        android:textColorHighlight="@color/blue_700"
                        android:textCursorDrawable="@drawable/cursor_black"
                        tools:ignore="TouchTargetSizeCheck" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:paddingBottom="9dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:hint="Дата выдачи"
                    android:paddingRight="9dp"
                    android:textColorHint="@color/grey"
                    app:boxStrokeColor="@color/blue_700"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                    >

                    <AutoCompleteTextView
                        android:id="@+id/textbox_date_issuing_of_passport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="@string/only_numbers"
                        android:drawableStart="@drawable/calendar_icon"
                        android:drawablePadding="8dp"
                        android:focusable="false"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:textColor="@color/white"
                        android:textColorHighlight="@color/blue_700"
                        android:textCursorDrawable="@drawable/cursor_black"
                        tools:ignore="TouchTargetSizeCheck" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:hint="Код подразделения"
                    android:textColorHint="@color/grey"
                    app:boxStrokeColor="@color/blue_700"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                    >

                    <AutoCompleteTextView
                        android:textCursorDrawable="@drawable/cursor_black"
                        android:textColorHighlight="@color/blue_700"
                        android:id="@+id/textbox_code_unit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="@string/only_numbers"
                        android:inputType="phone"
                        android:maxLength="7"
                        android:textColor="@color/white"
                        tools:ignore="TouchTargetSizeCheck" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewPassport2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />


    </LinearLayout>
</com.example.vkr.utils.NonFocusingScrollView>